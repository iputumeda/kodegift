<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SurveyActivity">

    <EditText
        android:textColorHint="#bdbdbd"
        android:textColor="#dfdfdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_product_s_name"
        android:id="@+id/productName_et_as"/>
    <EditText
        android:textColorHint="#bdbdbd"
        android:textColor="#dfdfdf"
        android:layout_below="@+id/productName_et_as"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_product_s_category"
        android:id="@+id/productCategory_et_as"/>
    <EditText
        android:textColorHint="#bdbdbd"
        android:textColor="#dfdfdf"
        android:layout_above="@+id/photoProduct_b_as"
        android:layout_below="@+id/productCategory_et_as"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_product_s_description"
        android:gravity="top"
        android:id="@+id/productDescription_et_as"/>
    <Button
        android:layout_alignTop="@+id/photoProduct_b_as"
        android:layout_toRightOf="@+id/photoProduct_b_as"
        android:layout_alignRight="@+id/survey_b_as"
        android:layout_above="@+id/survey_b_as"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/take_product_s_barcode"
        android:textAllCaps="false"
        android:onClick="onClickBarcodeProduct"/>
    <Button
        android:id="@+id/photoProduct_b_as"
        android:layout_alignLeft="@+id/survey_b_as"
        android:layout_above="@+id/survey_b_as"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/take_product_s_photo"
        android:onClick="onClickPhotoProduct"/>
    <Button
        android:id="@+id/survey_b_as"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/survey"
        android:onClick="onClickSurveyProduct"/>

</RelativeLayout>
